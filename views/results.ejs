<body>
    <%- include("partials/nav.ejs") %>
    <h1>Search Results</h1>

    <% for (let row of rows) { %>
        "<%= row.quote %>" 
        <br>
        <!--Error appears becuase js cannot understand express query -->
        <a class="authors" href="#" authorId="<%= row.authorId %>"><%= row.firstName %> <%= row.lastName %></a> 
        <hr>
    <% } %> 

    <dialog id="authorModal">
        <div class="author-container">
            <h2 id="authorName"></h2>
            <p id="authorBio"></p>
            <img id="authorImage" alt="authorImage" src="">
        </div>
        <button id="closeModel"> Close </button>
    </dialog>
    
    <script src="/js/result.js">
        
    </script>
